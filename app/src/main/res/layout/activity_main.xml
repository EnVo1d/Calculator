<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainView"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textOperations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textOperations" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/btnZero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="35dp"
            android:clickable="true"
            android:gravity="center"
            android:text="0"
            android:onClick="onNumClick"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnDoubleZero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:onClick="onNumClick"
            android:gravity="center"
            android:text="00"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnZero"
            app:layout_constraintStart_toEndOf="@id/btnZero"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnDot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:onClick="onNumClick"
            android:gravity="center"
            android:text="."
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnDoubleZero"
            app:layout_constraintStart_toEndOf="@id/btnDoubleZero"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnResult"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onEqualsClick"
            android:text="="
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnDot"
            app:layout_constraintStart_toEndOf="@id/btnDot"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnOne"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="31dp"
            android:clickable="true"
            android:onClick="onNumClick"
            android:gravity="center"
            android:text="1"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/btnZero"
            app:layout_constraintStart_toStartOf="@+id/btnZero"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnTwo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="2"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnOne"
            app:layout_constraintStart_toEndOf="@+id/btnOne"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnThree"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="3"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnTwo"
            app:layout_constraintStart_toEndOf="@+id/btnTwo"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:text="+"
            android:onClick="onOperationClick"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnThree"
            app:layout_constraintStart_toEndOf="@+id/btnThree"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnFour"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="4"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/btnOne"
            app:layout_constraintStart_toStartOf="@+id/btnOne"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnFive"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="5"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnFour"
            app:layout_constraintStart_toEndOf="@+id/btnFour"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnSix"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="6"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnFive"
            app:layout_constraintStart_toEndOf="@+id/btnFive"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:text="―"
            android:onClick="onOperationClick"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnSix"
            app:layout_constraintStart_toEndOf="@+id/btnSix"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnSeven"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="7"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/btnFour"
            app:layout_constraintStart_toStartOf="@+id/btnFour"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnEight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="8"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnSeven"
            app:layout_constraintStart_toEndOf="@+id/btnSeven"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnNine"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onNumClick"
            android:text="9"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnEight"
            app:layout_constraintStart_toEndOf="@+id/btnEight"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnMultiply"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:text="×"
            android:onClick="onOperationClick"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnNine"
            app:layout_constraintStart_toEndOf="@+id/btnNine"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnClear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="31dp"
            android:clickable="true"
            android:gravity="center"
            android:text="C"
            android:onClick="onClearClick"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/btnSeven"
            app:layout_constraintStart_toStartOf="@+id/btnSeven"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnBrackets"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="%"
            android:onClick="onPercentClick"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="@+id/btnClear"
            app:layout_constraintStart_toEndOf="@+id/btnClear"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnBackspace"
            android:layout_width="60dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:gravity="center|bottom"
            android:text="←"
            android:longClickable="true"
            android:onClick="onBackspaceClick"
            android:textAllCaps="false"
            android:textSize="60sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/btnBrackets"
            app:layout_constraintStart_toEndOf="@+id/btnBrackets" />


        <TextView
            android:id="@+id/btnDivide"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onOperationClick"
            android:text="÷"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBackspace"
            app:layout_constraintStart_toEndOf="@+id/btnBackspace" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>